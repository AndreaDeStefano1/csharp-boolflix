@{
    Layout = "_EditorLayout";
    @model List<Feature>
}
<div class="d-flex align-items-center justify-content-between">
    <h1 class="text-center "> Caratteristiche </h1>
    <div>
        <a class=" btn btn-primary " asp-action="Create" asp-controller="Feature">Aggiungi nuovo</a>
    </div>
</div>
@if (Model.Count == 0)
{
    <div class=" alert alert-primary">
        <p> Non sono presenti caratteristiche </p>
    </div>
}else
{
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Feature feature in Model)
                {
                    <tr>
                        <td>@feature.Id</td>
                        <td>@feature.Name</td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Update", "Feature", new { Id = feature.Id } )">Modifica</a>
                            <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@feature.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class=" btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}

