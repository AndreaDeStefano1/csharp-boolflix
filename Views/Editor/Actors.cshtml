@{
    Layout = "_EditorLayout";
}
@model List<Actor> 
<div class="d-flex align-items-center justify-content-between">
    <h1 class="text-center "> Attori </h1>
    <div>
        <a class=" btn btn-primary " asp-action="Create" asp-controller="Actor">Aggiungi nuovo</a>
    </div>
</div>


@if (Model.Count == 0)
{
    <div class=" alert alert-primary">
        <p> Non sono presenti caratteristiche </p>
    </div>
}
else
{
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Actor actor in Model)
                {
                    <tr>
                        <td>@actor.Id</td>
                        <td>@actor.Name</td>
                        <td>@actor.Surname</td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Update", "Actor", new { Id = actor.Id } )">Modifica</a>
                            <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@actor.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class=" btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}